{
  "name": "@roninjin10/forge-smithy",
  "description": "A cli wrapper around forge especially useful for beginners",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "src/index.ts",
  "bin": {
    "forge-smithy": "dist/index.js"
  },
  "license": "MIT",
  "private": false,
  "engines": {
    "node": ">=18",
    "pnpm": ">=7"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsup",
    "dev": "tsup --watch --onSuccess \"node dist/index.js forge\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "eslint \"**/*.{ts,tsx}\" --fix && prettier \"src/**/*.{ts,tsx}\" --write",
    "lint:check": "eslint \"**/*.{ts,tsx}\" && prettier --check \"src/**/*.{ts,tsx}\""
  },
  "peerDependencies": {
    "zod": "*"
  },
  "devDependencies": {
    "@vitest/ui": "^0.28.4",
    "tsup": "^6.5.0",
    "tsx": "^3.12.2",
    "typescript": "^4.9.5",
    "vitest": "^0.28.4",
    "zod": "^3.20.2"
  },
  "dependencies": {
    "@types/react": "^17.0.53",
    "cac": "^6.7.14",
    "ink": "^3.2.0",
    "react": "^17.0.2",
    "terminal-link": "^3.0.0",
    "zustand": "^4.3.2"
  }
}
