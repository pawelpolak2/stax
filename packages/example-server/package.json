{
  "name": "@roninjin10/example-server",
  "version": "0.0.2",
  "main": "dist/roninjin10-example-server.cjs.js",
  "module": "dist/roninjin10-example-server.esm.js",
  "license": "MIT",
  "private": true,
  "files": [
    "dist",
    "scripts/run"
  ],
  "engines": {
    "node": ">=18",
    "pnpm": ">=7"
  },
  "preconstruct": {
    "entrypoints": [
      "index.ts",
      "scripts/run.ts"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "envSchema": "ts-node src/scripts/envSchema.ts",
    "build": "preconstruct build && pnpm bundle",
    "bundle": "npx esbuild src/scripts/run.ts --platform=node --bundle --outfile=dist/run.bundle.js",
    "kill": "npx kill-port 7300",
    "dev": "nodemon src/scripts/run.ts",
    "serve": "node dist/run.bundle.js",
    "test": "echo 'No tests implemented'",
    "postinstall": "preconstruct dev",
    "lint": "eslint \"**/*.{ts,tsx}\" --fix && prettier \"src/**/*.{ts,tsx}\" --write",
    "lint:ci": "eslint \"**/*.{ts,tsx}\" && prettier --check \"src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "@prisma/client": "^4.8.1",
    "@roninjin10/typesafe-env": "workspace:*",
    "@trpc/server": "^10.8.1",
    "fastify": "^4.11.0",
    "fastify-metrics": "^10.0.2",
    "prisma": "^4.8.1",
    "superjson": "^1.12.1",
    "trpc-playground": "^1.0.4",
    "typescript": "^4.9.4",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@preconstruct/cli": "^2.3.0",
    "esbuild": "^0.16.16",
    "nodemon": "^2.0.20"
  }
}
